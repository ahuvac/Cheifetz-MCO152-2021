<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="cheifetz.scrabble.DictionaryController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>


    <Label text="Word:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="wordField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Button fx:id="findButton" text="Check for word" GridPane.columnIndex="1" GridPane.rowIndex="1"
            onAction="#check"/>

    <TextField fx:id="resultField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>


